# ipsec.conf - strongSwan IPsec configuration file
config setup
	strictcrlpolicy=no
	# uniqueids = no

# Add connections here.
conn %default
    left=%defaultroute
    leftsubnet={{ lab_cidr }}
    right=%any

conn home
    keyexchange=ikev1
    aggressive = no
    ike=aes256-sha1-modp1024
    rightauth=psk
    leftauth=psk
    pfs=no
    authby=psk
    auto=add
    right=%any
    rightsubnet={{ my_cidr }}
    type=tunnel
    ikelifetime=28800


